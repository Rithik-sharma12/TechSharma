# Root level gitignore

# Environment variables - NEVER commit these!
.env
.env.local
.env.*.local
*.env

# Node modules
node_modules/

# Build outputs
dist/
build/
.next/
.cache/

# Logs
*.log
npm-debug.log*
yarn-debug.log*

# OS files
.DS_Store
Thumbs.db
Desktop.ini

# IDE/Editor
.idea/
.vscode/*
!.vscode/extensions.json
*.swp
*.swo

# Strapi specific
.strapi/
.strapi-updater.json
.strapi-cloud.json
exports/

# Sensitive files
*.pem
*.key
*.crt
*.p12
*.pfx

# Database files
*.sql
*.sqlite
*.sqlite3

# Uploads (keep structure but not files)
public/uploads/*
!public/uploads/.gitkeep

# Misc
.tmp/
coverage/
*.local
